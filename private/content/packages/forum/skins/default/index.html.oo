      function loaderOn() {
        $(window).scroll(function(){
          var div_position = $('.Floader').offset();
          var div_bottom = div_position.top + $('.btinew').height();
          var bottom_scroll = $(document).scrollTop() + $(window).height();
          if(bottom_scroll > div_bottom) {
            $(".Floader").remove();
            start += 10;
            loadMessageas(start, page);
          }
        });
      }

      function textCollapser() {
        $('.textCollapse').unbind('click');
        $('.textCollapse').click(function(){
          var thisId = this;
          var mid = $(thisId).attr('mid');
          if($(thisId).attr('ignorMy')) {
            $(thisId).removeAttr('ignorMy');
            return;
          }
          // alert('123');
          var html = $(thisId).attr('full_text');
          if(html) {
            $([document.documentElement, document.body]).animate({
                scrollTop: $('#' + mid).offset().top - 60
              }, 300);
            // var randId = Math.floor(Math.random() * 100000) + 1;
            $(thisId).css('opacity', '0');
            $(thisId).html(html + '&nbsp;<span style="cursor:pointer;color:#e95420"><span id="c' + mid + '" class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span></span>');
            $(thisId).removeAttr('full_text');
            $(thisId).css('cursor', 'default');
            $(thisId).show().animate({opacity:1},1000);
            $('#c' + mid).click(function(){
              $(thisId).css('opacity', '0');
              $(thisId).html(html.substring(0, 170) + ' ...&nbsp;<span style="cursor:pointer;color:#e95420"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></span>');
              $(thisId).attr('full_text', html);
              $(thisId).attr('ignorMy', '1');
              $(thisId).css('cursor', 'pointer');
              $(thisId).animate({opacity:1},1000);
              $([document.documentElement, document.body]).animate({
                scrollTop: $('#' + mid).offset().top - 60
              }, 300);
              return;
            });
          }
        });
      }
    </script>
