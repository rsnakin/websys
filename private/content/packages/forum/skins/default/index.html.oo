      function get_comments(mid) {
        $.post(
          '/cgi-bin/index.cgi', {
            pkg: 'content:forum',
            action: 'get_comments',
            mid: mid
          },
          function(data, textStatus){
            try {
              var response = $.evalJSON(data);
            }
            catch(e) {
              alert('Error: ' + e);
              return;
            }
            var msg = response['mainMsg'];
            $('#mImg').attr('src', '/i/a/' + msg['muid'] +   '.jpg');
            $('#mImg').show().animate({opacity:1},1000);
            $('#mName').attr('href', '/user_' + msg['muid'] +   '.html');
            $('#mName').html(msg['uvorname'] + ' ' + msg['uname']);
            $('#mName').show().animate({opacity:1},1000);
            $('#mDate').html(msg['mtime']);
            $('#mDate').show().animate({opacity:1},1000);
            var stars = '';
            for (var s = 1; s <= 5; s++) {
              if(s <= msg['rate']) {
                stars += '<span class="glyphicon glyphicon-star" aria-hidden="true" style="color: #e95420"></span>';
              } else {
                stars += '<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>';
              }
            }
            $('#mStars').html(stars);
            $('#mStars').show().animate({opacity:1},1000);
            $('#messageModalBody').css('opacity', '0');
            var html = msg['mbody'];
            html = html.replace(/\n/g, '<br />');
            $('#messageModalBody').html(html);
            $('#messageModalBody').show().animate({opacity:1},1000);
            // alert('/i/a/' + msg['muid'] +   '.jpg');
          }
        );
      }

